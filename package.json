{
    "name": "nobd",
    "version": "0.1.1",
    "description": "Nobd (نَبْض) — a minimal Muslim routine tracker for prayers, adhkar and daily habits.",
    "author": "Ibrahim",
    "private": true,
    "license": "MIT",
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "dev": "yarn --cwd frontend dev",
        "start:frontend": "yarn --cwd frontend dev",
        "start:backend": "yarn --cwd backend start:dev",
        "start": "yarn start:backend",
        "build": "yarn --cwd frontend build && yarn --cwd backend build",
        "build:frontend": "yarn --cwd frontend build",
        "build:backend": "yarn --cwd backend build",
        "lint": "yarn --cwd frontend lint || true && yarn --cwd backend lint || true",
        "test:backend": "yarn --cwd backend test",
        "test:frontend": "echo \"no frontend unit tests configured\"",
        "test:e2e": "yarn --cwd backend test:e2e"
    },
    "keywords": [
        "nobd",
        "salah",
        "adhkar",
        "habits",
        "tracker"
    ],
    "engines": {
        "node": ">=18"
    }
}
